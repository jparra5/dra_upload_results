        "shell": "#!/bin/bash

set +x
set +e 



export DRA_FORMAT_SELECT=#FORMAT_SELECT#
export DRA_LOG_FILE=\"#LOG_FILE#\"
export DRA_WORKING_DIRECTORY=\"#WORKING_DIRECTORY#\"
export DRA_ENVIRONMENT=\"#ENVIRONMENT#\"
export DRA_APPLICATION_NAME=\"#APPLICATION_NAME#\"
export DRA_LIFE_CYCLE_STAGE_SELECT=#LIFE_CYCLE_STAGE_SELECT#

export DRA_ADDITIONAL_FORMAT_SELECT=#ADDITIONAL_FORMAT_SELECT#
export DRA_ADDITIONAL_LOG_FILE=\"#ADDITIONAL_LOG_FILE#\"
export DRA_ADDITIONAL_LIFE_CYCLE_STAGE_SELECT=#ADDITIONAL_LIFE_CYCLE_STAGE_SELECT#
        
        
function custom_cmd {
    eval #COMMAND#
    CMDRESULT=$?

    if [ $CMDRESULT -ne 0 ]; then
        exit 1
    fi
}
    
export -f custom_cmd        
        
        
. $EXT_DIR/_init.sh
. $EXT_DIR/execute.sh
RESULT=$?
        
if [ $RESULT -ne 0 ]; then
    exit 1
fi
